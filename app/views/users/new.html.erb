
<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">


            <div class="row">
                <div class="col-sm-5">

                	<div class="form-box">
                    	<div class="form-top">
                    		<div class="form-top-left">
                    			<h3>Log in</h3>
                    		</div>
                    		<div class="form-top-right">
                    			<i class="fa fa-key"></i>
                    		</div>
                        </div>
                        <div class="form-bottom">
		                    <%= form_tag sessions_path, :method => 'post' do %>
		                    	<div class="form-group">
		                    		<%= label :session, :email, :class => 'sr-only' %>
		                    		<%= email_field :session, :email, :placeholder => 'Email', class: 'form-control' %>
		                    	</div>
								<div class="form-group">
		                    		<%= label :session, :password, :class => 'sr-only' %>
		                    		<%= password_field :session, :password, :placeholder => 'Password', class: 'form-control' %>
								</div>
		                        <%= button_tag("Log in", :type => 'submit', :class => 'btn') %>
		                    <% end %>
	                    </div>
                    </div>
                </div>

                <div class="col-sm-1 middle-border"></div>
                <div class="col-sm-1"></div>

                <div class="col-sm-5">

                	<div class="form-box">
                		<div class="form-top">
                    		<div class="form-top-left">
                    			<h3>Sign up</h3>
                    		</div>
                    		<div class="form-top-right">
                    			<i class="fa fa-pencil"></i>
                    		</div>
                        </div>


                        <div class="form-bottom">
		                    <%= form_for(@user) do |f| %>
		                    	<%= render 'shared/error_messages' %>
		                    	<div class="form-group">
	                    			<%= f.label :first_name, "first Name", :class => 'sr-only' %>
	                    			<%= f.text_field :first_name, :placeholder => 'First Name', :class => 'form-first-name form-control' %>
		                        </div>
		                        <div class="form-group">
	                    			<%= f.label :last_name, "Last Name", :class => 'sr-only' %>
	                    			<%= f.text_field :last_name, :placeholder => 'Last Name', :class => 'form-last-name form-control' %>
		                        </div>
		                        <div class="form-group">
	                    			<%= f.label :email, "Email", :class => 'sr-only' %>
	                    			<%= f.text_field :email, :placeholder => 'Email', :class => 'form-email form-control' %>
	                    		</div>
		                        <div class="form-group">
									<%= f.label :password, "Password", :class => 'sr-only' %>
	                    			<%= f.password_field :password, :placeholder => 'Password', :class => 'form-password form-control' %>
								</div>
		                        <div class="form-group">
									<%= f.label :password_confirmation, "Confirm Password", :class => 'sr-only' %>
	                    			<%= f.password_field :password_confirmation, :placeholder => 'Confirm Password', :class => 'form-password form-control' %>
								</div>
		                        <%= button_tag("Sign up", :type => 'submit', :class => 'btn') %>
		                    <% end %>
	                    </div>
                	</div>
                </div>
            </div>
        </div>
    </div>
</div>